<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangeRed</item>
        <item name="colorPrimaryVariant">@color/firebrick</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/CustomBurger</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="Theme.Go4Lunch">
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorButtonNormal">@color/teal_700</item>
        <item name="colorControlNormal">@color/orangeRed</item>
        <item name="colorControlActivated">@color/orangeRed</item>
        <item name="colorControlHighlight">@color/orangeRed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@color/orangeRed</item>
        <item name="android:textColorSecondary">@color/orangeRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/go4lunch4</item>
    </style>

    <style name="FirebaseUI.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/orangeRed</item>
        <item name="android:background">@null</item>
    </style>

    <!-- TOGGLE BUTTON -->
    <style name="CustomBurger" parent="Base.Widget.AppCompat.DrawerArrowToggle">>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.Go4Lunch.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>